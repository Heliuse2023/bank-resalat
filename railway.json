{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE"
  },
  "deploy": {
    "startCommand": "python -m uvicorn backend.server:app --host 0.0.0.0 --port $PORT",
    "healthcheckPath": "/api/"
  },
  "environments": {
    "production": {
      "variables": {
        "PYTHONUNBUFFERED": "1",
        "NODE_ENV": "production"
      }
    }
  }
}